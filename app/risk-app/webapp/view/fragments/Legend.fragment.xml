<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified">
    <ResponsivePopover id="legendPopover" title="Legend" placement="Bottom" showHeader="true">
        <PlanningCalendarLegend appointmentItems="{
					path : 'supportedAppointmentItems>/supportedAppointmentItems',
					templateShareable: true
				}">
            <appointmentItems>
                <u:CalendarLegendItem text="{supportedAppointmentItems>text}" type="{supportedAppointmentItems>type}" tooltip="{supportedAppointmentItems>text}"/>
            </appointmentItems>
        </PlanningCalendarLegend>
    </ResponsivePopover>
</core:FragmentDefinition>